version: "3.9"

services:
  realestate-api:
    container_name: realestate-api
    build:
      context: ./app
      dockerfile: Dockerfile
    env_file:
      - .env
    ports:
      - "{{ spring_http_port }}:{{ spring_http_port }}"
    depends_on:
      - mailhog
    restart: unless-stopped

  mailhog:
    image: mailhog/mailhog:v1.0.1
    container_name: mailhog
    ports:
      - "{{ mailhog_ui_port }}:8025"
      - "{{ mailhog_smtp_port }}:1025"
    restart: unless-stopped
